<div class="box box-solid" id="users-container">
    <div class="box-header with-border">
        <h2 class="box-title">Manage users</h2>
    </div><!-- /.box-header -->
    <div class="box-body">
        <div class="row pull-left" style="width:100%;">
            <div class="col-xs-12 col-md-12">
                <div class="input-group" style="margin-bottom:10px;">
                    <button class="btn  btn-primary" href="javascript:void(0);" style="width:auto;" data-action="add">
                        <i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;
                        Add new user
                    </button>
                </div>
                <table id="users-grid" style="width:100%;" class="table table-bordered table-hover"></table>
            </div>
        </div>
    </div><!-- /.box-body -->
    <div class="overlay" id="overlay-grid" style="display:none;">
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
    </div>
</div><!-- /.box -->

<script id="button-template-users" type="text/html">
    <div style="white-space:nowrap;" data-row-id="<%=id%>">
        <button data-id="<%=id%>" data-action="edit" type="button" class="btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Edit user
        </button>&nbsp;&nbsp;
        <button data-id="<%=id%>" data-action="set-password" type="button" class="btn btn-warning btn-xs">
            <span class="glyphicon glyphicon-lock"></span>&nbsp;&nbsp;Set new password
        </button>&nbsp;&nbsp;
        <button data-id="<%=id%>" data-action="delete" type="button" class="btn btn-danger btn-xs">
            <span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete
        </button>
    </div>
</script>

@Html.Partial("Parts/UserForm")
@Html.Partial("Parts/UserChangePassword")



