@using ROHV.Core.Enums;
<script id="additional-info-template" type="text/html">
    <div class="box box-solid">
        <div class="box-header with-border">
            <h2 class="box-title">Additional information</h2>
        </div><!-- /.box-header -->
        <div class="box-body">
            <div class="row" style="width:100%;">
                <div class="col-xs-12 col-md-12">
                    <ul id="myTabs" class="nav nav-tabs" role="tablist">
                        <li class="active" role="presentation">
                            <a href="#approved-service-tab" role="tab" data-toggle="tab" aria-controls="approved-service-tab" aria-expanded="true">
                                Approved Services
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#rate-hours-tab" role="tab" data-toggle="tab" aria-controls="rate-hours-tab" aria-expanded="true">
                                Rate/Hours
                            </a>
                        </li>
                        <li role="presentation">
                            <a href="#employees-tab" role="tab" data-toggle="tab" aria-controls="employees-tab" aria-expanded="true">
                                Employees
                            </a>
                        </li>
                        <li role="presentation" class="dropdown">
                            <a href="#call-logs-tab" role="tab" data-toggle="tab" aria-controls="call-logs-tab" aria-expanded="true">
                                Call logs
                            </a>
                        </li>
                        <li role="presentation" class="dropdown">
                            <a href="#notes-tab" role="tab" data-toggle="tab" aria-controls="notes-tab" aria-expanded="true">
                                Notes
                            </a>
                        </li>
                        <li role="presentation" class="dropdown">
                            <a href="#hab-plans-tab" role="tab" data-toggle="tab" aria-controls="hab-plans-tab" aria-expanded="true">
                                Hab Plans/Reviews
                            </a>
                        </li>
                        <li role="presentation" class="dropdown">
                            <a href="#documents-tab" role="tab" data-toggle="tab" aria-controls="documents-tab" aria-expanded="true">
                                Billing Documents
                            </a>
                        </li>
                        <li role="presentation" class="dropdown">
                            <a href="#notifications-settings-tab" role="tab" data-toggle="tab" aria-controls="notifications-settings-tab" aria-expanded="true">
                                Notifications Settings
                            </a>
                        </li>
                        @if (User.IsInRole(RolesEnum.Manager.ToString()) || User.IsInRole(RolesEnum.Admin.ToString()))
                        {
                            <li role="presentation" class="dropdown">
                                <a href="#print-documents-tab" role="tab" data-toggle="tab" aria-controls="print-documents-tab" aria-expanded="true">
                                    Print documents
                                </a>
                            </li>
                        }
                        <li role="presentation" class="dropdown">
                            <a href="#uploaded-file-tab" role="tab" data-toggle="tab" aria-controls="uploaded-file-tab" aria-expanded="true">
                                MSC Docs
                            </a>
                        </li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="approved-service-tab" aria-labelledby="approved-service-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="rate-hours-tab" aria-labelledby="rate-hours-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="employees-tab" aria-labelledby="employees-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="call-logs-tab" aria-labelledby="call-logs-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="notes-tab" aria-labelledby="notes-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="hab-plans-tab" aria-labelledby="hab-plans-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="documents-tab" aria-labelledby="documents-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="notifications-settings-tab" aria-labelledby="notifications-settings-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="print-documents-tab" aria-labelledby="print-documents-tab"></div>
                        <div role="tabpanel" class="tab-pane fade" id="uploaded-file-tab" aria-labelledby="uploaded-file-tab"></div>
                    </div>
                </div>
            </div>
        </div><!-- /.box-body -->
        <div class="overlay" id="overlay-grid" style="display:none;">
            <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
        </div>

    </div><!-- /.box -->
</script>
@Html.Partial("Parts/Tabs/ApprovedServices")
@Html.Partial("Parts/Tabs/CallLogs")
@Html.Partial("Parts/Tabs/Documents")
@Html.Partial("Parts/Tabs/Employees")
@Html.Partial("Parts/Tabs/HabPlans")
@Html.Partial("Parts/Tabs/Notes")
@Html.Partial("Parts/Tabs/Notifications")
@Html.Partial("Parts/Tabs/PrintDocuments")
@Html.Partial("Parts/Tabs/Rate")
@Html.Partial("Parts/Tabs/UploadedFiles")