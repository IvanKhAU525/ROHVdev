@using ROHV.WebApi.ViewModels;
@{
    var lists = (Dictionary<String, List<ItemListViewModel>>)ViewData["Lists"];
}

<script id="pop-template-employee-info" type="text/html">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header alert-primary">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Employee Info</h4>
            </div>
            <div class="modal-body">
                <form id="employee-form">
                    <div class="row">
                        <div class="col-xs-6 col-md-6">
                            <div class="row">                                
                                <div class="col-xs-12 col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Salutation</label>
                                        <div class="col-sm-6">
                                            <p class="form-control-static"><%=model.get('Salutation')%></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">First name</label>
                                        <div class="col-sm-6">
                                            <p class="form-control-static"><%=model.get('FirstName')%></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Middle name</label>
                                        <div class="col-sm-6">
                                            <p class="form-control-static"><%=model.get('MiddleName')%></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Last name</label>
                                        <div class="col-sm-6">
                                            <p class="form-control-static"><%=model.get('LastName')%></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Company name</label>
                                        <div class="col-sm-6">
                                            <p class="form-control-static"><%=model.get('CompanyName')%></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <div class="form-group">
                                        <label class="col-sm-6 control-label">Address</label>
                                        <div class="col-sm-6">
                                            <p class="form-control-static"><%=model.get('Address1')%>, <%=model.get('Address2')%></p>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-xs-12 col-md-12">
                                    <label class="col-sm-6 control-label">City, state, zip</label>
                                    <div class="row">
                                        <div class="col-xs-5 col-md-5 form-group" style="padding-right:5px !important;">
                                            <p class="form-control-static"><%=model.get('City')%>, <%=model.get('State')%>, <%=model.get('Zip')%></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-6">
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Category</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('CategoryName')%></p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Type</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('ContactTypeName')%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Job Title</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('JobTitle')%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Dept</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('DepartmentName')%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Is Service Coordinator?</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static">
                                            @Html.Raw(@"<%if(model.get(""IsServiceCoordinator"")==true){%> Yes <%} else{%> No <%}%>")
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Phone</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('Phone')%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Mobile phone</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('MobilePhone')%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Email</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('EmailAddress')%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-12">
                                <div class="form-group">
                                    <label class="col-sm-6 control-label">Notes</label>
                                    <div class="col-sm-6">
                                        <p class="form-control-static"><%=model.get('Notes')%></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn  btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" id="print-label-employee" class="btn btn-primary">Print label</button>
            </div>
            <div class="overlay" id="overlay-dialog" style="display:none;">
                <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</script>
