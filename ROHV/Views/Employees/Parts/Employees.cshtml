<div class="box box-solid" id="employees-container">
    <div class="box-header with-border">
        <h2 class="box-title">Manage employees</h2>
    </div><!-- /.box-header -->
    <div class="box-body">
        <div class="row pull-left" style="width:100%;">
            <div class="col-xs-12 col-md-12">
                <div style="position:relative;">
                    <div class="input-group pull-left" style="margin-top:10px;">
                        <button class="btn  btn-primary" href="javascript:void(0);" style="width:auto;" data-action="add">
                            <i class="fa fa-plus"></i>&nbsp;&nbsp;&nbsp;
                            Add new employee
                        </button>
                    </div>
                    <div class="input-group pull-right">
                        <div class="row" style="width:400px;">

                            <div class="form-group col-xs-12 col-md-12">
                                <label for="EmployeeName">Filter by employee name</label>
                                <input value="" class="form-control" id="EmployeeName" name="EmployeeName" placeholder="Search by employee name...">
                            </div>
                        </div>
                    </div>
                </div>
                <div style="clear:both;"></div>
                <div>
                    <table id="employees-grid" style="width:100%;" class="table table-bordered table-hover"></table>
                </div>
            </div>
        </div>
    </div><!-- /.box-body -->
    <div class="overlay" id="overlay-grid" style="display:none;">
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
    </div>
</div><!-- /.box -->

<script id="button-template-employees" type="text/html">
    <div style="white-space:nowrap;" data-row-id="<%=id%>">
        <button data-id="<%=id%>" data-action="edit" type="button" class="btn btn-primary btn-xs">
            <span class="glyphicon glyphicon-pencil"></span>&nbsp;&nbsp;Edit employee
        </button>&nbsp;&nbsp;
        <button data-id="<%=id%>" data-action="delete" type="button" class="btn btn-danger btn-xs">
            <span class="glyphicon glyphicon-trash"></span>&nbsp;&nbsp;Delete
        </button>
    </div>
</script>

@Html.Partial("Parts/EmployeeForm")



