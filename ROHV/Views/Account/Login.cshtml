@using ROHV.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="row center-vertical">
    <div class="col-md-3 center-margin" style="min-width:400px;">
        <form action="@Url.Action("Login","Account")" id="login-validation">
            <div id="login-form" class="content-box bg-default">
                <div class="content-box-wrapper">
                    <img class="display-block login-img" src="~/Content/images/logo.png" alt="">
                    <div id="alert-container"></div>
                    <div class="form-group">
                        <div style="position:relative;">
                            <input class="form-control" placeholder="Enter email" type="email" id="email" name="email">
                            <span class="input-group-addon addon-inside bg-gray">
                                <i class="fa fa-envelope-o"></i>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div style="position:relative;">
                            <input class="form-control" id="exampleInputPassword1" placeholder="Password" type="password" id="password" name="password">
                            <span class="input-group-addon addon-inside bg-gray">
                                <i class="fa fa-unlock"></i>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button data-action="submit" class="btn btn-block btn-primary">Login</button>
                    </div>
